#!/bin/bash
# .bashrc

# --------------- Source global definitions ---------------
if test -f /etc/bashrc; then
	. /etc/bashrc
fi
# --------------- Get the system env variables ---------------
# (.profile readed by all system not only bash)
if test -f ~/.profile; then
    . ~/.profile
fi

# --------------- Shell env variables ---------------
# variables for colorizing less pages
export LESS_TERMCAP_mb=$'\e[35m' # magenta
export LESS_TERMCAP_md=$'\e[33m' # yellow
export LESS_TERMCAP_me=$'\e[0m'
export LESS_TERMCAP_se=$'\e[0m'
export LESS_TERMCAP_so=$'\e[34m' # blue
export LESS_TERMCAP_ue=$' # "\e[0m'
export LESS_TERMCAP_us=$'\e[4m'  # underline
export GROFF_NO_SGR=1 # For Konsole and Gnome-terminal
export PROCESSTECH="$HOME/Repos/gitLab/processtech"
export GITHUB="$HOME/Repos/gitHub"
export GITLAB="$HOME/Repos/gitLab"
export DATA="/mnt/4a653e30-67ab-4d2d-8787-d4f2c3ec3742"
export DOT="$HOME/Repos/gitHub/mzubzzz/dotfiles"

# --------------- Path setup ---------------
if ! [[ "$PATH" =~ "$HOME/.local/bin:$HOME/bin:" ]]
then
    PATH="$HOME/.local/bin:$HOME/bin:$PATH"
fi
PATH="$HOME/Repos/gitHub/mzubzzz/dotfiles/scripts:$PATH"

export=PATH

# --------------- Dircolors ---------------
if command -v dircolors &>/dev/null; then
    if test -r "$HOME/.dircolors"; then
        eval "$(dircolors -b "$HOME/.dircolors")"
    else
        eval "$(dircolors -b)"
    fi
fi

# --------------- use vi-style editing interface ---------------
set -o vi

# --------------- Aliases ---------------
alias vi=vim
alias ls="ls -h --color=auto"
alias ll="ls -l --color=auto"

# --------------- Functions ---------------
# --------------- Navigation ---------------
processtech() {
    cd $PROCESSTECH
} && export -f processtech

github() {
    cd $GITHUB
} && export -f github

gitlab() {
    cd $GITLAB
} && export -f gitlab


data() {
    cd $DATA
} && export -f data

dot() {
    cd $DOT
} && export -f dot 

# --------------- Custom prompt ---------------
parse_git_branch() {
   git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}
export PS1="\[\e[36m\]\u\[\e[35m\]@\[\e[31m\]\h\[\e[35m\]:\e[33m\]\W\[\e[32m\]\$(parse_git_branch)\[\e[35m\]$\[\e[00m\] "
