# .bash_aliases

# Specific environment
PATH="$HOME/Repos/gitHub/mzubzzz/dotfiles/scripts:$PATH"

# use vi-style editing interface
set -o vi

# Aliases
alias vi=vim

# Functions
repos() {
    cd $HOME/Repos
}

# Custom prompt.
parse_git_branch() {
   git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}
export PS1="\u@\h \W\[\033[32m\]\$(parse_git_branch)\[\033[00m\] $ "
